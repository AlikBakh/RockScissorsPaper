[*.cs]

# IDE1006: Стили именования
dotnet_diagnostic.IDE1006.severity = none

# IDE0051: Удалите неиспользуемые закрытые члены
dotnet_diagnostic.IDE0051.severity = none

# IDE0044: Добавить модификатор только для чтения
dotnet_style_readonly_field = true:none

# CS0414: Полю "GameMode.CompHand" присвоено значение, но оно ни разу не использовано.
dotnet_diagnostic.CS0414.severity = none

# CS0219: Переменная назначена, но ее значение не используется
dotnet_diagnostic.CS0219.severity = none

# IDE0059: Ненужное присваивание значения
csharp_style_unused_value_assignment_preference = discard_variable:none

# IDE0055: Исправить форматирование
dotnet_diagnostic.IDE0055.severity = none
